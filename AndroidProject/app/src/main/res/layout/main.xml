<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <TextureView
       android:id="@+id/overlay_texture_display_1"
       android:layout_width="0dp"
       android:layout_height="0dp" />

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="right"
       android:layout_gravity="right"
       android:orientation="vertical">
      <View
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:layout_weight="1"/>
       <Button
           android:id="@+id/btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:text="Over"/>
      <Button
           android:id="@+id/btn2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:text="LaunchClock"/>
      <Button
           android:id="@+id/btn3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:text="LaunchFiles"/>
      <Button
         android:id="@+id/btn4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:textSize="12sp"
         android:text="LaunchSettings"/>

      <Button
          android:id="@+id/btn_drag_up"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:text="DragUp"/>

      <Button
          android:id="@+id/btn_drag_down"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:text="DragDown"/>


   </LinearLayout>

</FrameLayout>
